@model IEnumerable<MVC_Grupp_5.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>See all parked vehicles</h1>

<p>
    <a asp-action="Create">Check In New Vehicle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInVehicle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInVehicle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegNr">Upadate info</a> |
                <a asp-action="Details" asp-route-id="@item.RegNr">Vehicle Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RegNr">Check Out</a>
            </td>
        </tr>
}
    </tbody>
</table>
